{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Workleap's default preset",
  "labels": [
    "renovate"
  ],
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "github-actions",
    "helm-values",
    "helmv3",
    "regex",
    "terraform",
    "npm",
    "nuget"
  ],
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "dependencyDashboard": false,
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "configMigration": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "nuspec files manager",
      "fileMatch": [
        "\\.nuspec$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "<dependency\\s+id=\"(?<depName>.*?)\"\\s+version=\"(?<currentValue>.*?)\"\\s*\\/>"
      ],
      "datasourceTemplate": "nuget",
      "versioningTemplate": "nuget"
    }
  ],
  "packageRules": [
    {
      "groupName": "dotnet-sdk",
      "description": "Enable non-major updates for .NET SDK and runtime (global.json and Docker images)",
      "matchPackageNames": [
        "dotnet-sdk",
        "mcr.microsoft.com/dotnet/sdk",
        "mcr.microsoft.com/dotnet/aspnet",
        "mcr.microsoft.com/dotnet/runtime",
        "mcr.microsoft.com/dotnet/runtime-deps"
      ],
      "minimumReleaseAge": "3 days",
      "extends": [
        ":separateMajorReleases"
      ]
    },
    {
      "groupName": "microsoft",
      "matchPackagePatterns": [
        "^Microsoft\\.Extensions\\.",
        "^System\\.",
        "^Microsoft\\.CodeAnalysis\\.CSharp\\."
      ],
      "extends": [
        ":separateMajorReleases"
      ]
    },
    {
      "groupName": "hangfire",
      "description": "Group Hangfire dependencies to make sure the build succeeds since they have strict version restrictions",
      "matchManagers": ["nuget"],
      "matchPackagePatterns": ["^Hangfire\\."]
    },
    {
      "groupName": "pipeline dependencies",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "gsoft deprecated",
      "description": "Update deprecated GSoft packages to their Workleap counterpart",
      "matchManagers": ["nuget"],
      "matchPackagePatterns": ["^GSoft\\..+"],
      "replacementNameTemplate": "{{{replace 'GSoft\\.' 'Workleap.' packageName}}}"
    },
    {
      "groupName": "npm",
      "matchManagers": ["npm"],
      "extends": [
          ":pinDependencies",
          ":pinDevDependencies"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
